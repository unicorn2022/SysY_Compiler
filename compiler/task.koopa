fun @f(@arr: *i32): i32 {
%entry:
	%arr = alloc *i32
	store @arr, %arr
	%0 = load %arr
	%1 = getptr %0, 1
	%2 = load %1
	ret %2
}

fun @main(): i32 {
%entry:
	@arr = alloc [i32, 2]
	%0 = getelemptr @arr, 0
	store 1, %0
	%1 = getelemptr @arr, 1
	store 2, %1
	// 传递数组参数相当于传递其第一个元素的地址
	%2 = getelemptr @arr, 0
	%3 = call @f(%2)
	ret %3
}
